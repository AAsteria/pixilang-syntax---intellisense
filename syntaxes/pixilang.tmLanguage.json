{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pixilang",
	"scopeName": "source.pixilang",
	"fileTypes": ["pixi", "txt"],
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.pixilang",
				"match": "\\b(if|while|for|return|break|else|halt|go|fn|breakall)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.pixilang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pixilang",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.line.double-slash.pixilang",
			"match": "//.*$"
		},
		"functions": {
			"name": "support.function.pixilang",
			"patterns": [{
				"match": "\\b(set_pixel_size|resize|load|new|get_screen|get_xsize|get_ysize|set_alpha|get_size|get_red|get_green|get_blue|get_timer|start_timer|clear|pixi|sprintf|print|get_event|frame|halt|set_screen|set_gl_callback|gl_get_int|gl_get_float|logf)\\b"
			}]
		},
		"operators": {
			"name": "keyword.operator.pixilang",
			"patterns": [{
				"match": "\\b(div)\\b|[+\\-*/=<>]"
			}]
		},
		"constants": {
			"name": "constant.language.pixilang",
			"patterns": [{
				"match": "\\b(WHITE|TOP|LEFT|INT8|PIXEL|EVT_QUIT|EVT_TYPE|GL_SCREEN|GL_MAX_TEXTURE_SIZE|GL_MAX_VERTEX_ATTRIBS|GL_MAX_VERTEX_UNIFORM_VECTORS|GL_MAX_VARYING_VECTORS|GL_MAX_VERTEX_TEXTURE_IMAGE_UNITS|GL_MAX_TEXTURE_IMAGE_UNITS|GL_MAX_FRAGMENT_UNIFORM_VECTORS)\\b"
			}]
		},
		"variables": {
			"name": "variable.language.pixilang",
			"patterns": [{
				"match": "\\b(EVT|FPS|WINDOW_XSIZE|WINDOW_YSIZE|ts|img|img2|alpha|size|p|r|g|b|t|i|x|y|no_log|userdata)\\b"
			}]
		},
		"numbers": {
			"name": "constant.numeric.pixilang",
			"patterns": [{
				"match": "\\b\\d+\\b"
			}]
		}
	}
}
